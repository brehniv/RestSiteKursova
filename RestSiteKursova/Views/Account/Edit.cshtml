@model EditModel
@{
    ViewBag.Titile = "Редагувати дані | Козацька Справа";
    ViewBag.Style = "~/css/Login.css";
}

<div class="container">
<h2>Редагувати дані</h2>

 @Html.ValidationSummary(true, "")
 <form method="post" asp-controller="Account" asp-action="Edit">
 <div class="text-field">
                <label class="text-field__label" asp-for="Email"></label>
                <input class="text-field__input" asp-for="Email" type="text" value="@Model.Email" />
                <span asp-validation-for="Email"></span>
            </div>
            <div class="text-field">
                <label class="text-field__label" asp-for="Year"></label>
                <input class="text-field__input" asp-for="Year" type="text" value="@Model.Year" />
                <span asp-validation-for="Email"></span>
            </div>
        <div class="input-submit">
                    <input type="submit" value="Зберегти зміни" />
        </div>
</form>
</div>

